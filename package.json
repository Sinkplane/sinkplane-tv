{
  "name": "sinkplane",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "scripts": {
    "eas-build-pre-install": "npm config set legacy-peer-deps true",
    "start": "EXPO_TV=1 expo start",
    "android": "EXPO_TV=1 expo run:android",
    "ios": "EXPO_TV=1 expo run:ios",
    "web": "expo start --web",
    "reset-project": "./scripts/reset-project.js",
    "lint": "expo lint",
    "prebuild": "expo prebuild --clean",
    "prebuild:tv": "EXPO_TV=1 expo prebuild --clean",
    "deploy": "npx expo export -p web && npx eas-cli@latest deploy"
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.2",
    "@tanstack/react-query": "^5.90.5",
    "expo": "^54.0.1",
    "expo-build-properties": "~1.0.7",
    "expo-crypto": "~15.0.7",
    "expo-device": "~8.0.9",
    "expo-font": "~14.0.7",
    "expo-linking": "~8.0.7",
    "expo-router": "~6.0.0",
    "expo-secure-store": "~15.0.7",
    "expo-splash-screen": "~31.0.8",
    "expo-status-bar": "~3.0.7",
    "expo-system-ui": "~6.0.7",
    "expo-web-browser": "~15.0.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "npm:react-native-tvos@0.81.4-0",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-network-info": "^5.2.1",
    "react-native-reanimated": "~4.1.0",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-tcp-socket": "^6.3.0",
    "react-native-web": "^0.21.0",
    "react-native-worklets": "~0.5.0",
    "react-native-zeroconf": "^0.13.8",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@react-native-tvos/config-tv": "^0.1.4",
    "@types/react": "~19.1.10",
    "@types/react-native-zeroconf": "^0.13.1",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-expo": "~10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.46.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "expo": {
    "install": {
      "exclude": [
        "react-native"
      ]
    }
  },
  "private": true
}
